<% content_for :pageTitle do %>
<div class="page-header">
  <h1 class="text-center">My Placelists</h1>
</div>
<% end %>

<div class="row">
  <div class="col-md-3">
    <h3 class="text-center">Add a new Placelist</h3>
    <div id="placelist_form">
      <% puts @placelist.to_json %>
      <%= form_for @placelist do |f| %>
        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, class: "form-control" %>
        </div>
       
        <div class="form-group">
          <%= f.label :description %>
          <%= f.text_area :description, class: "form-control" %>
        </div>
       
        <div class="form-group">
          <%= f.submit class: "btn btn-default center-block", id: "submitPlacelist" %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="col-md-6 col-md-offset-1" id="placelistList">
    <% @placelists.each do |placelist| %>
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h2 class="panel-title"><%= link_to placelist.title, placelist_path(placelist), class: "placeListTitle" %> <%= link_to 'Delete', placelist_path(placelist), class: "label label-primary pull-right deleteList" %><span class="label label-primary pull-right editPlaceList">Edit</span></h2>
        </div>
        <div class="panel-body">
          <%= placelist.description %>
<!--           <%= link_to 'Edit', edit_placelist_path(placelist) %>
          <%= link_to 'Delete', placelist_path(placelist), method: :delete, class: "label label-primary pull-right" %> -->
        </div>
      </div>
    <% end %>
  </div>

</div>

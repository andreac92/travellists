<% content_for :pageTitle do %>
<div class="page-header">
  <h1 class="text-center"><%= @placelist.title %></h1>
  <p class="text-center"><em><%= @placelist.description %></em></p>
</div>
<% end %>

<div class="row">
<div class="col-md-4">
  <div class="list-wrapper">
    <div id="list">
      <% @places.each do |place| %>
           <div class="<%= place.name %>">
              <span class="hiddenCoords"><%= place.coords =%></span>
              <span class="place_visited" id="<%= place.id %>"><%= visited_status(place.visited) %></span> 
              <%= place.name %> 
              <%= link_to 'Delete', placelist_place_path(@placelist, place), class: "deletePlace" %>
            </div>
      <% end %>
    </div>

    <h3 class="text-center">Add a place</h3>
    <%= form_for([@placelist, @placelist.places.build]) do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "autocomplete form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :description %><br>
        <%= f.text_area :description, class: "form-control" %>
      </div>
      <%= f.text_area :coords %>
      <div id="submit" class="form-group">
        <%= f.submit class: "btn btn-default center-block" %>
      </div>
    <% end %>
  </div>
</div>
  <div class="col-md-8">
    <div id="map">
    </div>
  </div>
</div>
<% content_for :extra do %>
      <script async defer
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAJB_lUYjfjoUK7nXENxrJFz7FsjU8CSvc&libraries=places&callback=travelMaps.init">
    </script>
<% end %>
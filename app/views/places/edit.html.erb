<h1>Edit place</h1>
 
<%= form_for :place, url: place_path(@place), method: :patch do |f| %>
 
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
 
  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>


 
  <p>
    <%= f.submit %>
  </p>
 
<% end %>
 
<%= link_to 'Back', places_path %>